generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Signalement {
  id             String   @id @default(cuid())
  codeBarres     String
  quantite       Int
  datePeremption DateTime
  commentaire    String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([createdAt(sort: Desc)])
  @@map("signalements")
}
